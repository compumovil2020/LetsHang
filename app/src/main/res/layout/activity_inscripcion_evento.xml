<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:paddingHorizontal="5dp"
        tools:context=".activities.DescripcionEventoActivity">

        <TextView
            android:id="@+id/tvTituloInscripcionEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Clase de futbol"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivLocationInscripcionEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLogoInscripcionEvento"
            app:srcCompat="@drawable/icn_location" />

        <TextView
            android:id="@+id/tvLocationInscripcionEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="Parque nacional"
            style="@style/typ_normal"
            app:layout_constraintStart_toEndOf="@+id/ivLocationInscripcionEvento"
            app:layout_constraintTop_toTopOf="@+id/ivLocationInscripcionEvento" />

        <ImageView
            android:id="@+id/ivCalendarInscripcionEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLocationInscripcionEvento"
            style="@style/icn_calendar" />

        <TextView
            android:id="@+id/tvFechaInscripcionEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabado 16 de agosto"
            style="@style/typ_normal"
            app:layout_constraintStart_toStartOf="@+id/tvLocationInscripcionEvento"
            app:layout_constraintTop_toTopOf="@+id/ivCalendarInscripcionEvento" />

        <ImageView
            android:id="@+id/ivTimeInscripcionEvento"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivCalendarInscripcionEvento"
            style="@style/icn_time" />

        <TextView
            android:id="@+id/tvTiempoInscripcionEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:00 PM - 4:00 PM"
            style="@style/typ_normal"
            app:layout_constraintStart_toStartOf="@+id/tvFechaInscripcionEvento"
            app:layout_constraintTop_toTopOf="@+id/ivTimeInscripcionEvento" />


        <ImageView
            android:id="@+id/ivMoneyInscripcionEvento"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivTimeInscripcionEvento"
            style="@style/icn_money" />

        <TextView
            android:id="@+id/tvPrecioInscripcionEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30.000$"
            style="@style/typ_normal"
            app:layout_constraintStart_toStartOf="@+id/tvTiempoInscripcionEvento"
            app:layout_constraintTop_toTopOf="@+id/ivMoneyInscripcionEvento" />

        <ImageView
            android:id="@+id/ivProfileInscripcionEvento"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivMoneyInscripcionEvento"
            style="@style/icn_profile" />

        <TextView
            android:id="@+id/tvHostInscripcionEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escuela de futbol los galacticos"
            style="@style/typ_normal"
            app:layout_constraintStart_toStartOf="@+id/tvPrecioInscripcionEvento"
            app:layout_constraintTop_toTopOf="@+id/ivProfileInscripcionEvento" />

        <TextView
            android:id="@+id/tvResumenInscripcionEvento"
            android:layout_width="372dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            style="@style/typ_normal"
            android:text="Clase para niños y adolecentes entre 10 y 14 años.  Exelente forma de pasar el fin de semana! Terminamos la clase con un partido amistoso."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivMapInscripcionEvento" />

        <Button
            android:id="@+id/btnSiguienteInscripcionEvento"
            style="@style/form_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/Next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llInscripcionEvento1" />

        <LinearLayout
            android:id="@+id/llInscripcionEvento1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResumenInscripcionEvento">

            <TextView
                android:id="@+id/tvParqueInscripcionEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coves_light"
                android:gravity="center"
                android:text="Parque"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvInfantilInscripcionEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coves_light"
                android:gravity="center"
                android:text="Infantil"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvLibreInscripcionEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coves_light"
                android:gravity="center"
                android:text="Aire Libre"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivLogoInscripcionEvento"
            android:layout_width="126dp"
            android:layout_height="139dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloInscripcionEvento"
            app:srcCompat="@drawable/logo_lets_hang" />

        <ImageView
            android:id="@+id/ivMapInscripcionEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivProfileInscripcionEvento"
            app:srcCompat="@drawable/rute_map" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>