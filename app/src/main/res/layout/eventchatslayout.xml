<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:id="@+id/llRemitenteEventsChat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNombreRemitenteEventsChat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="Nombre Enviador"
                android:textSize="15dp"
                android:textColor="@color/secondaryColor"
                android:fontFamily="@font/coves_bold"/>

            <TextView
                android:id="@+id/tvFechaRemitenteEventsChat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="FechaEnvio"
                android:textSize="10dp" />
            "/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvCuerpoRemitenteEventsChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Cuerpo"
            android:textSize="13dp"
            android:fontFamily="@font/coves_bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:id="@+id/llTuEventsChat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNombreTuEventsChat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tú"
                android:textSize="15dp"
                android:textColor="@color/secondaryColor"
                android:fontFamily="@font/coves_bold"/>

            <TextView
                android:id="@+id/tvFechaTuEventsChat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Fecha Envio Tú"
                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCuerpoTuEventsChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Cuerpo tú"
            android:textSize="13dp"
            android:fontFamily="@font/coves_bold"/>
    </LinearLayout>
</LinearLayout>