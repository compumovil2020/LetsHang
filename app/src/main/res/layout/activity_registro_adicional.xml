<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".activities.RegistroAdicional" >

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">


            <TextView
                android:id="@+id/txtViewTitleInfoAdicional"
                style="@style/typ_TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/coves_bold"
                android:text="InformaciÃ³n Adicional"
                android:textSize="40dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayoutLocationInfoAdicional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewTitleInfoAdicional">

                <ImageView
                    android:id="@+id/imgLocationInfoAdicional"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icn_location" />

                <EditText
                    android:id="@+id/editTxtCiudadInfoAdicional"
                    style="@style/form_big"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gray"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Ciudad"
                    android:textAlignment="center" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutCalendarInfoAdicional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutLocationInfoAdicional">

                <ImageView
                    android:id="@+id/imgCalendarInfoAdicional"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icn_calendar" />

                <EditText
                    android:id="@+id/editTxtCalendarInfoAdicional"
                    style="@style/form_big"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gray"
                    android:ems="10"
                    android:inputType="date"
                    android:text="Fecha de Nacimiento"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtViewRedesInfoAdicional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/coves_bold"
                android:text="Redes Sociales"
                android:textColor="@color/gray"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutCalendarInfoAdicional" />

            <LinearLayout
                android:id="@+id/linearLayoutFacebookInfoAdicional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewRedesInfoAdicional">

                <ImageView
                    android:id="@+id/imgFacebookInfoAdicional"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icn_facebook" />

                <EditText
                    android:id="@+id/editTxtFacebookInfoAdicional"
                    style="@style/form_big"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gray"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Facebook"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutInstagramInfoAdicional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutFacebookInfoAdicional">

                <ImageView
                    android:id="@+id/imgInstagramInfoAdicional"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icn_instagram" />

                <EditText
                    android:id="@+id/editTxtInstagramInfoAdicional"
                    style="@style/form_big"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gray"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Instagram"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutLinkednInfoAdicional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutInstagramInfoAdicional">

                <ImageView
                    android:id="@+id/imgLinkednInfoAdicional"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icn_linkedin" />

                <EditText
                    android:id="@+id/editTxtLinkednInfoAdicional"
                    style="@style/form_big"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gray"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Linkedin"
                    android:textAlignment="center" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonRegistrarInfoAdicional"
                style="@style/form_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Registrarse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutLinkednInfoAdicional" />

            <Button
                android:id="@+id/buttonOmitirInfoAdicional"
                style="@style/form_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Omitir"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonRegistrarInfoAdicional" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

