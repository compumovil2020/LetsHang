<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imImagenEventsLayout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <LinearLayout
        android:id="@+id/llContenedorEventsLayout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        style="@style/form_bigOrange">

        <TextView
            android:id="@+id/tvTituloEventsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="TextView"
            android:fontFamily="@font/coves_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvFechaEventsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="TextView"
            android:fontFamily="@font/coves_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvLugarEventsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="TextView"
            android:fontFamily="@font/coves_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvHostEventsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:fontFamily="@font/coves_bold"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>