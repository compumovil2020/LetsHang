<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CrearEventoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTituloEventoDeportivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/coves_bold"
            android:gravity="center"
            android:text="CREAR EVENTO \nDEPORTIVO"
            android:textColor="@color/secondaryColor"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/etDeporteEventoDeportivo"
            style="@style/form_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/secondaryColor"
            android:ems="10"
            android:gravity="center"
            android:hint="DEPORTE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloCrearEvento" />

        <EditText
            android:id="@+id/etEquipoEventoDeportivo"
            style="@style/form_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/secondaryColor"
            android:ems="10"
            android:gravity="center"
            android:hint="TAMAÃ‘O DEL EQUIPO"
            android:inputType="number" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp">

            <TextView
                android:id="@+id/tvNivelEventoDeportivo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nivel" />

            <Spinner
                android:id="@+id/spLevelEventoDeportivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>