<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".activities.ChatAdminActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tvTituloChatAdmin"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.05"
        android:fontFamily="@font/coves_bold"
        android:gravity="center"
        android:text="Chat con Admin"
        android:textColor="@color/secondaryColor"
        android:textSize="30dp" />

    <ListView
        android:id="@+id/lvChatAdmin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">
z
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etEscribirMensajeChatAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enviar mensaje"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="4"/>

        <Button
            android:id="@+id/btEnviarChatAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enviar" />

    </LinearLayout>

</LinearLayout>