<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Typography. -->
    <style name="typ_ReallyBig">
        <item name="android:fontFamily">@font/balsamiq_sans_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="typ_RellyBigWhite">
        <item name="android:fontFamily">@font/balsamiq_sans_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="typ_Big">
        <item name="android:fontFamily">@font/balsamiq_sans_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="typ_BigWhite">
        <item name="android:fontFamily">@font/balsamiq_sans_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="typ_normal">
        <item name="fontFamily">@font/balsamiq_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="typ_normalWhite">
        <item name="fontFamily">@font/balsamiq_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="typ_normalGray">
        <item name="fontFamily">@font/balsamiq_sans_regular</item>
